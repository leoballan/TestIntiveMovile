<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_dark"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintBottom_toTopOf="@+id/detail_fragment_land_guideline1"
        android:background="@color/celeste_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="6dp"
        />



    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_fragment_land_guideline2"
        android:background="@color/celeste_claro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/detailFragment_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@android:color/background_dark"

        >

        <ImageView
            android:id="@+id/detailFragment_imageview"
            android:layout_width="@dimen/width_photo_detail"
            android:layout_height="@dimen/heigth_photo_detail"
            android:contentDescription="@null"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/detail_fragment_land_guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/detail_fragment_land_guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"
        />

    <TextView
        android:id="@+id/detailFragment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_detail_land"
        android:layout_marginEnd="@dimen/margin_detail_land"
        android:text="holA"
        android:textSize="@dimen/font_size_name"
        android:textStyle="bold"
        android:background="@drawable/fondo_detail_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailFragment_cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detailFragment_user"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/detailFragment_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_detail_land"
        android:layout_marginEnd="@dimen/margin_detail_land"
        android:text="holA"
        android:textSize="@dimen/font_size_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailFragment_cardView"
        app:layout_constraintBottom_toTopOf="@+id/detailFragment_email"
        app:layout_constraintTop_toBottomOf="@+id/detailFragment_name"
        android:background="@drawable/fondo_detail_username_mail"
        android:textColor="@android:color/holo_blue_bright"
        android:gravity="center"

        />


    <TextView
        android:id="@+id/detailFragment_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_detail_land"
        android:layout_marginEnd="@dimen/margin_detail_land"
        android:text="holA"
        android:textSize="@dimen/font_size_username"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailFragment_cardView"
        app:layout_constraintTop_toBottomOf="@+id/detailFragment_user"
        android:background="@drawable/fondo_detail_username_mail"
        android:textColor="@android:color/holo_blue_bright"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
